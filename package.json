{
  "name": "exceed-app-react",
  "version": "1.0.0",
  "description": "EXCEED RPG Character Sheet Manager",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "parse-perks": "tsx scripts/parse-perks.ts",
    "parse-spells": "tsx scripts/parse-spells.ts",
    "parse-data": "npm run parse-perks && npm run parse-spells",
    "prebuild": "npm run parse-data",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "update-data": "npm run parse-data && sleep 2 && git add public/data/*.json dist/data/*.json && git commit -m 'chore: update parsed perk/spell data' && git push || true",
    "deploy": "npm run parse-data && sleep 2 && git add public/data/*.json dist/data/*.json && git commit -m 'chore: update parsed perk/spell data' && git push && tsc && vite build && gh-pages -d dist || true"

  },
  "homepage": "https://BigScaryGames.github.io/Exceed-Playtest-App",
  "dependencies": {
    "lucide-react": "^0.367.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "vite": "^5.2.0"
  },
  "private": true
}

